	<video width="500px" height="400px"
	       src = "video/mov_bbb.mp4" poster="images/mov_bbb.JPG"
	       onmouseover="over(this)" onmouseout="out(this)">
	</video>
	
	<script type="text/javascript">
		function over(vid){ //마우스 오버시
			vid.play();
		}
		
		function out(vid){ //마우스 아웃시
			vid.pause();
			vid.load();
		}
	</script>
</body>
